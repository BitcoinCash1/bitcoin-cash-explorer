{
  "name": "explorer-backend",
  "version": "3.5",
  "description": "Bitcoin Cash Explorer mempool visualizer and blockchain explorer backend",
  "license": "AGPL-3.0-or-later",
  "homepage": "https://bchexplorer.cash",
  "author": "Melroy van den Berg <melroy@melroy.org> (https://melroy.org)",
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.melroy.org/bitcoincash/bitcoin-cash-explorer"
  },
  "bugs": {
    "url": "https://gitlab.melroy.org/bitcoincash/bitcoin-cash-explorer/issues"
  },
  "keywords": [
    "bitcoin",
    "cash",
    "bitcoin cash",
    "mempool",
    "blockchain",
    "explorer",
    "bch"
  ],
  "main": "index.ts",
  "scripts": {
    "tsc": "tsc -p tsconfig.build.json",
    "build": "npm run tsc && npm run create-resources",
    "clean": "rm -rf ./dist/ ./node_modules/ ./package/ ./rust-gbt/",
    "create-resources": "cp ./src/tasks/price-feeds/mtgox-weekly.json ./dist/tasks && node dist/api/fetch-version.js",
    "package": "./npm_package.sh",
    "package-rm-build-deps": "./npm_package_rm_build_deps.sh",
    "preinstall": "cd ../rust/gbt && npm run build-release && npm run to-backend",
    "start": "node --max-old-space-size=2048 dist/index.js",
    "start-production": "node --max-old-space-size=16384 dist/index.js",
    "reindex-updated-pools": "npm run start-production --update-pools",
    "reindex-all-blocks": "npm run start-production --update-pools --reindex-blocks",
    "test": "jest --coverage",
    "test:ci": "CI=true jest --coverage",
    "test:integration": "jest --config=jest.integration.config.ts --runInBand --forceExit",
    "test:with-db": "bash ./scripts/test-with-db.sh",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "prettier": "prettier --write \"src/**/*.{js,ts}\"",
    "prettier:check": "prettier --check \"src/**/*.{js,ts}\""
  },
  "dependencies": {
    "@mempool/electrum-client": "1.1.9",
    "@types/node": "^24.1.0",
    "axios": "1.13.5",
    "bitcoinjs-lib": "~7.0.1",
    "crypto-js": "~4.2.0",
    "express": "~4.22.1",
    "mysql2": "~3.17.4",
    "redis": "^5.11.0",
    "rust-gbt": "file:./rust-gbt",
    "socks-proxy-agent": "~8.0.5",
    "typescript": "~5.9.3",
    "ws": "~8.19.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/crypto-js": "^4.2.2",
    "@types/express": "^4.17.17",
    "@types/jest": "^30.0.0",
    "@types/ws": "~8.18.1",
    "typescript-eslint": "^8.56.0",
    "jiti": "^2.6.1",
    "@eslint/js": "^10.0.1",
    "eslint": "^10.0.1",
    "globals": "^17.3.0",
    "eslint-config-prettier": "^10.1.8",
    "jest": "^30.0.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.1"
  },
  "overrides": {
    "js-yaml": "^4.1.1",
    "glob": "^11.1.0"
  }
}
